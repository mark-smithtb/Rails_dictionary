<!DOCTYPE html>
<html>
<head>
  <title>RailsDictionary</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navbar header navbar_dictionary'>
    <div class='nav navbar-brand'><a href="<%=definitions_path%>"><%= image_tag "icon_rails.png" %></a></div>
    <ul>
      <li id='new_word'><%= link_to 'Add a word', new_definition_path %></li>
    </ul>
    <form method="get" action="<%= search_definitions_path %>" class="navbar-form navbar-right" role="search">
      <input type="text" class="form-control" placeholder="Search" name="search">
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
<%= yield %>

</body>
</html>
